@page
@model Portfolio.Pages.BookList.UpsertModel
@{
    ViewData["Title"] = "Create or Edit";
}
<br />
<h2 class="text-info">@(Model.Book.Id != 0? "Edit": "Create") Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" enctype="multipart/form-data" asp-action="OnPost" asp-antiforgery="true">
        @if (Model.Book.Id != 0)
        {
            <input type="hidden" asp-for="Book.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ReleaseYear"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ReleaseYear" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Image"></label>
            </div>
            <div class="col-6">
                <input type="file" asp-for="Book.Image" name="image" id="image" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" onClick="this.innerHTML = 'Sending…'; this.form.submit(); this.disabled=true;" class="btn btn-primary form-control">@(Model.Book.Id != 0? "Update": "Create")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}